                                <Image Source="/ShadowKernel;component/Resources/Lock Landscape_48px.png" RenderTransformOrigin="0.5,0.5" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" >
                                    <Image.RenderTransform>
                                        <TransformGroup>
