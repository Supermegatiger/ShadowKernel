                    </MenuItem>
                    <Separator Margin="0,-10,0,-10"/>
                    <MenuItem x:Name="Chat" Header="Чат" BorderThickness="0" Margin="0,0,0,-15" FontSize="14" Height="30" Padding="0" Click="Chat_Click">
                        <MenuItem.Icon>
                            <Image Source="/ShadowKernel;component/Resources/Administrative Tools_48px.png" RenderTransformOrigin="0.5,0.5" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" >
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="1.7" ScaleY="1.7"/>
                                        <SkewTransform/>
                                        <RotateTransform/>
